<!--ONCLICK sending list of information
<html>
    <head>
        <script>
            function call(){
                var l=document.getElementsByTagName("li")
                console.log(l)
                console.log(l[0].innerHTML)
            }
        </script>
    </head>
    <body>x
        <p>NAME:<span id="name"></span></p>
