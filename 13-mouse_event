<!--ONCLICK sending list of information using loop
<html>
    <head>
        <script>
            var a=[1,2,"hi",9]
            function display(){
                document.getElementById("demo").innerHTML
                for(i=0;i<a.length;i++){
                    /*last value executesdocument.getElementById("demo").innerHTML=a[i]*/
                    document.getElementById("demo").innerHTML+="<br/>"+a[i]
                    /*console.log(a[i]);*/
                }
            }
        </script>
    </head>
    <body>
        <p  id="demo"></p>
        <button onclick=display()>submit</button>
    </body>
</html>
-->                     
