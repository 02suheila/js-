<!--ONCLICK sending information to webpage
    <html>
    <head>
        <script>
            function callMe(){
                /*storing value*/
                var a="hey u requested";
                /*dispalying value by documenet*/
                var q=document.getElementById("username").innerHTML=a
                var q=document.getElementById("u")
                q.style.background="white"

                document.body.style.background="black"


            }
        </script>
        <body>
            <p> NAME:<span id="username"></span></p>
