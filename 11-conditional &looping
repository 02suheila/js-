            if (a==b){
                console.log("come on")
            }
            else if(a<b){
                console.log("may be")
            }
            else{
                console.log("get lost")
            }
            var age=24;
            if (age>=18){
            console.log("you are eligible to vote")
            }
            let y=0
            while(y<=20){
                console.log(y);
                y++
            }
            var e=10;
            do{
                console.log(e);
                e++;
               
            }
            while(e<=5)
            for (i=100;i<=110;i++){
